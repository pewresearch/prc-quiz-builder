{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "prc-quiz/controller",
	"version": "1.0.0",
	"title": "Quiz Controller",
	"description": "This block controls all aspects of a quiz.",
	"category": "prc-quiz",
	"keywords": [
		"quiz",
		"typology"
	],
	"attributes": {
		"allowedBlocks": {
			"type": "array",
			"default": ["prc-quiz/pages", "prc-quiz/results"]
		},
		"type": {
            "type": "string",
			"enum": [
				"quiz",
				"typology"
			],
			"default": "quiz"
        },
		"groups": {
			"type": "boolean",
			"default": false
		},
		"mailchimpListId": {
			"type": "string"
		},
		"gaTracking": {
			"type": "boolean",
			"default": false
		},
		"demoBreakLabels": {
			"type": "string"
		},
		"threshold": {
			"type": "number",
			"default": 4
		},
		"startButtonColor": {
			"type": "string",
			"default": "sandwisp"
		},
		"buttonColor": {
			"type": "string",
			"default": "cape-palliser"
		}
	},
	"providesContext": {
		"prc-quiz/type": "type",
		"prc-quiz/demo-break-labels": "demoBreakLabels",
		"prc-quiz/threshold": "threshold",
		"prc-quiz/groupsEnabled": "groups"
	},
  "usesContext": [
    "prc-quiz/isEmbedded"
  ],
	"supports": {
		"anchor": true,
		"html": false,
		"color": {
			"background": true,
			"text": true,
			"link": true
		},
		"spacing": {
			"blockGap": true,
			"margin": [ "top", "bottom" ],
			"padding": true,
			"__experimentalDefaultControls": {
				"padding": true
			}
		},
		"typography": {
			"fontSize": true,
			"__experimentalFontFamily": true,
			"__experimentalDefaultControls": {
				"fontSize": true,
				"__experimentalFontFamily": true
			}
		}
	},
	"textdomain": "controller",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view/index.js",
  "viewStyle": "file:./view/style-index.css"
}
