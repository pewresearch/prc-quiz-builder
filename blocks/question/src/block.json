{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "prc-quiz/question",
	"version": "0.1.0",
	"title": "Question",
	"description": "A question, contains a question, a set of answers, and optionally a image. Choose from single, multiple choice, or thermometer (if quiz is a typology) question types.",
	"category": "prc-quiz",
	"attributes": {
		"allowedBlocks": {
			"type": "array"
		},
		"question": {
			"type": "string",
			"default": "Question text here..."
		},
		"internalId": {
			"type": "string"
		},
		"randomizeAnswers": {
			"type": "boolean",
			"default": false
		},
		"type": {
			"type": "string",
			"default": "single"
		},
		"conditionalDisplay": {
			"type": "boolean",
			"default": false
		},
		"conditionalAnswerUuid": {
			"type": "string"
		},
		"thermometerValues" : {
			"type": "string"
		},
		"demoBreakValues" : {
			"type": "string"
		},
		"uuid": {
            "type": "string"
        },
		"imageId": {
			"type": "integer"
		},
		"imageOnTop": {
			"type": "boolean",
			"default": false
		}
	},
	"supports": {
		"anchor": true,
		"html": false,
		"color": {
			"background": true,
			"text": true,
			"link": true
		},
		"spacing": {
			"blockGap": true,
			"margin": [ "top", "bottom" ],
			"padding": true
		},
		"typography": {
			"fontSize": true,
			"__experimentalFontFamily": true
		}
	},
	"parent" : ["prc-quiz/page"],
	"providesContext": {
		"prc-quiz/question/type": "type"
	},
	"usesContext": ["prc-quiz/type", "prc-quiz/demo-break-labels"],
	"textdomain": "question",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php"
}
